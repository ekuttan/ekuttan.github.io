---
interface Props {
  title: string;
}
import '@fontsource-variable/dm-sans';

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="canonical" href={new URL(Astro.url.pathname, 'https://ekuttan.in').href} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="robots" content="index, follow" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://ekuttan.in" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content="An Ideapreneur who codes and design experience. Building coolest P2P mobile payment app in India at @mychillr / co-founder @tinkerhub" />
    <meta property="og:image" content="https://ekuttan.in/abid.png" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content="https://ekuttan.in" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content="An Ideapreneur who codes and design experience. Building coolest P2P mobile payment app in India at @mychillr / co-founder @tinkerhub" />
    <meta name="twitter:image" content="https://ekuttan.in/abid.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,100;0,9..40,200;0,9..40,300;0,9..40,400;0,9..40,500;0,9..40,600;0,9..40,700;0,9..40,800;0,9..40,900;0,9..40,1000;1,9..40,100;1,9..40,200;1,9..40,300;1,9..40,400;1,9..40,500;1,9..40,600;1,9..40,700;1,9..40,800;1,9..40,900;1,9..40,1000&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="An Ideapreneur who codes and design experience. Building coolest P2P mobile payment app in India at @mychillr / co-founder @tinkerhub">
    <meta name="theme-color" content="#FFE653" />
    <title>{title}</title>
  </head>
  <body class="antialiased scroll-smooth sm:bg-background bg-white">
    <slot />
  </body>
</html>

<style is:global>
	body {
		font-family: 'DM Sans Variable', sans-serif;
	}
</style>